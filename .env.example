# TradeUp Platform Configuration
# Copy to .env and fill in values

# ============ REQUIRED FOR PRODUCTION (Railway) ============

# Flask Environment - MUST be 'production' on Railway
FLASK_ENV=production

# Secret key for sessions - generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT Secret - generate with: python -c "import secrets; print(secrets.token_hex(32))"
# REQUIRED in production - app will fail to start without this
JWT_SECRET_KEY=your-jwt-secret-change-in-production

# Encryption key for sensitive data (access tokens) at rest
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# REQUIRED in production - app will fail to start without this
ENCRYPTION_KEY=your-fernet-encryption-key

# Database - Railway provides this automatically
DATABASE_URL=postgresql://localhost/tradeup_dev

# App URL - your Railway deployment URL
APP_URL=https://tradeup-production.up.railway.app

# ============ SHOPIFY CONFIGURATION ============

# Shopify store domain
SHOPIFY_DOMAIN=your-store.myshopify.com

# Shopify Admin API access token (needs customer read/write, products read)
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxx
SHOPIFY_ADMIN_TOKEN=shpat_xxxxxxxxxxxxx

# Shopify App credentials (for OAuth)
SHOPIFY_CLIENT_ID=your-client-id
SHOPIFY_API_KEY=your-api-key
SHOPIFY_API_SECRET=your-api-secret

# Webhook verification secret
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

# ============ ERROR TRACKING ============

# Sentry DSN for error tracking (highly recommended for production)
# Get from: https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============ EMAIL (SendGrid) ============

# SendGrid API key for transactional emails
# Get from: https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# From email address for transactional emails
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=TradeUp

# ============ OPTIONAL ============

# Server port (Railway provides this)
PORT=8080

# Gunicorn workers (default: 2)
GUNICORN_WORKERS=2

# Log level (default: info)
LOG_LEVEL=info

# Redis URL for rate limiting (optional - uses memory if not set)
# REDIS_URL=redis://localhost:6379

# Enable rate limiting in development (default: production only)
# ENABLE_RATE_LIMITING=true
