{% comment %}
  TradeUp Trade-In CTA Block
  Promotes trade-in submissions with configurable content

  Settings:
  - heading: Main heading
  - description: Description text
  - button_text: CTA button text
  - button_link: URL to trade-in form/page
  - show_bonus_rate: Display tier bonus rate
  - style: Visual style
  - image: Optional hero image
{% endcomment %}

{% schema %}
{
  "name": "TradeUp Trade-In CTA",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trade In Your Items"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Turn your unwanted items into store credit. Fast, easy, and you get paid fairly."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Trade-In"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "info": "Link to your trade-in submission form"
    },
    {
      "type": "checkbox",
      "id": "show_bonus_rate",
      "label": "Show Member Bonus Rate",
      "default": true,
      "info": "Shows the customer's tier bonus percentage"
    },
    {
      "type": "select",
      "id": "style",
      "label": "Block Style",
      "options": [
        { "value": "card", "label": "Card" },
        { "value": "hero", "label": "Hero Section" },
        { "value": "inline", "label": "Inline Banner" }
      ],
      "default": "card"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "Optional image for hero style"
    },
    {
      "type": "text",
      "id": "step_1",
      "label": "Step 1 Text",
      "default": "Describe your items"
    },
    {
      "type": "text",
      "id": "step_2",
      "label": "Step 2 Text",
      "default": "Get an instant quote"
    },
    {
      "type": "text",
      "id": "step_3",
      "label": "Step 3 Text",
      "default": "Ship or drop off"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#4F46E5"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F9FAFB"
    },
    {
      "type": "checkbox",
      "id": "show_steps",
      "label": "Show How It Works Steps",
      "default": true
    }
  ]
}
{% endschema %}

<style>
  .tradeup-tradein {
    font-family: inherit;
  }

  .tradeup-tradein--card {
    background: {{ block.settings.background_color }};
    border-radius: 16px;
    padding: 40px;
    text-align: center;
  }

  .tradeup-tradein--hero {
    position: relative;
    background: {{ block.settings.background_color }};
    border-radius: 16px;
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    text-align: center;
  }

  .tradeup-tradein--hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 100%);
    z-index: 1;
  }

  .tradeup-tradein--hero .tradeup-tradein__content {
    position: relative;
    z-index: 2;
    color: white;
  }

  .tradeup-tradein__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tradeup-tradein--inline {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
    background: {{ block.settings.background_color }};
    border-radius: 12px;
    padding: 24px 32px;
    flex-wrap: wrap;
  }

  .tradeup-tradein__heading {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 12px;
    color: inherit;
  }

  .tradeup-tradein--hero .tradeup-tradein__heading {
    font-size: 2.5rem;
    color: white;
  }

  .tradeup-tradein--inline .tradeup-tradein__heading {
    font-size: 1.25rem;
    margin-bottom: 4px;
  }

  .tradeup-tradein__description {
    font-size: 1.125rem;
    color: #6B7280;
    margin: 0 0 24px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .tradeup-tradein--hero .tradeup-tradein__description {
    color: rgba(255,255,255,0.9);
  }

  .tradeup-tradein--inline .tradeup-tradein__description {
    margin: 0;
    font-size: 0.875rem;
  }

  .tradeup-tradein__bonus {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: {{ block.settings.primary_color }};
    color: white;
    padding: 8px 16px;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 24px;
  }

  .tradeup-tradein__bonus-icon {
    width: 16px;
    height: 16px;
  }

  .tradeup-tradein__steps {
    display: flex;
    justify-content: center;
    gap: 32px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }

  .tradeup-tradein__step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    max-width: 150px;
  }

  .tradeup-tradein__step-number {
    width: 36px;
    height: 36px;
    background: {{ block.settings.primary_color }};
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1rem;
  }

  .tradeup-tradein__step-text {
    font-size: 0.875rem;
    color: #6B7280;
    text-align: center;
  }

  .tradeup-tradein--hero .tradeup-tradein__step-text {
    color: rgba(255,255,255,0.85);
  }

  .tradeup-tradein__button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: {{ block.settings.primary_color }};
    color: white;
    padding: 14px 32px;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.15s, box-shadow 0.15s;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .tradeup-tradein__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    color: white;
  }

  .tradeup-tradein__button-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.15s;
  }

  .tradeup-tradein__button:hover .tradeup-tradein__button-icon {
    transform: translateX(3px);
  }

  @media (max-width: 768px) {
    .tradeup-tradein--card,
    .tradeup-tradein--hero {
      padding: 32px 24px;
    }

    .tradeup-tradein__heading {
      font-size: 1.5rem;
    }

    .tradeup-tradein--hero .tradeup-tradein__heading {
      font-size: 1.75rem;
    }

    .tradeup-tradein__steps {
      gap: 20px;
    }

    .tradeup-tradein--inline {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<div class="tradeup-tradein tradeup-tradein--{{ block.settings.style }}"
     data-tradeup-tradein
     {% if customer %}data-customer-id="{{ customer.id }}"{% endif %}>

  {% if block.settings.style == 'hero' and block.settings.image %}
    {{ block.settings.image | image_url: width: 1920 | image_tag: class: 'tradeup-tradein__bg-image', loading: 'lazy' }}
  {% endif %}

  <div class="tradeup-tradein__content">
    {% if block.settings.show_bonus_rate and customer %}
      <div class="tradeup-tradein__bonus" data-tradeup-bonus hidden>
        <svg class="tradeup-tradein__bonus-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm2.5 3a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm6.207.293a1 1 0 00-1.414 0l-6 6a1 1 0 101.414 1.414l6-6a1 1 0 000-1.414zM12.5 10a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" clip-rule="evenodd"/>
        </svg>
        <span data-tradeup-bonus-text></span>
      </div>
    {% endif %}

    {% unless block.settings.style == 'inline' %}
      <h3 class="tradeup-tradein__heading">{{ block.settings.heading }}</h3>
      <p class="tradeup-tradein__description">{{ block.settings.description }}</p>

      {% if block.settings.show_steps %}
        <div class="tradeup-tradein__steps">
          <div class="tradeup-tradein__step">
            <span class="tradeup-tradein__step-number">1</span>
            <span class="tradeup-tradein__step-text">{{ block.settings.step_1 }}</span>
          </div>
          <div class="tradeup-tradein__step">
            <span class="tradeup-tradein__step-number">2</span>
            <span class="tradeup-tradein__step-text">{{ block.settings.step_2 }}</span>
          </div>
          <div class="tradeup-tradein__step">
            <span class="tradeup-tradein__step-number">3</span>
            <span class="tradeup-tradein__step-text">{{ block.settings.step_3 }}</span>
          </div>
        </div>
      {% endif %}
    {% else %}
      <div>
        <h3 class="tradeup-tradein__heading">{{ block.settings.heading }}</h3>
        <p class="tradeup-tradein__description">{{ block.settings.description }}</p>
      </div>
    {% endunless %}

    <a href="{{ block.settings.button_link | default: '#trade-in' }}" class="tradeup-tradein__button">
      {{ block.settings.button_text }}
      <svg class="tradeup-tradein__button-icon" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
      </svg>
    </a>
  </div>
</div>

<script>
  (function() {
    const tradein = document.querySelector('[data-tradeup-tradein]');
    if (!tradein) return;

    const customerId = tradein.dataset.customerId;
    const bonusEl = tradein.querySelector('[data-tradeup-bonus]');
    const bonusTextEl = tradein.querySelector('[data-tradeup-bonus-text]');

    if (!customerId || !bonusEl) return;

    // Fetch member tier bonus from TradeUp API
    async function fetchBonusRate() {
      try {
        const apiBase = window.TRADEUP_API_URL || '/apps/tradeup/api';
        const response = await fetch(`${apiBase}/customer-account/extension/data`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ customer_id: customerId })
        });

        if (!response.ok) throw new Error('Failed to fetch');

        const data = await response.json();

        if (data.is_member && data.member?.tier?.bonus_percent) {
          const bonusPct = data.member.tier.bonus_percent;
          bonusTextEl.textContent = `${data.member.tier.name}: +${bonusPct}% trade-in bonus`;
          bonusEl.hidden = false;
        }

      } catch (error) {
        console.error('TradeUp: Error fetching bonus rate', error);
      }
    }

    fetchBonusRate();
  })();
</script>
