          <a href="#" class="tradeup-referral__share-btn tradeup-referral__share-btn--email" data-share="email">
            <svg class="tradeup-referral__share-icon" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            Email
          </a>
        </div>
      {% endif %}

      <div class="tradeup-referral__stats" data-referral-stats hidden>
        <div class="tradeup-referral__stat">
          <div class="tradeup-referral__stat-value" data-referral-count>0</div>
          <div class="tradeup-referral__stat-label">Friends Referred</div>
        </div>
        <div class="tradeup-referral__stat">
          <div class="tradeup-referral__stat-value" data-referral-earnings>$0</div>
          <div class="tradeup-referral__stat-label">Earned</div>
        </div>
      </div>
    {% endif %}
  </div>
{% else %}
  <div class="tradeup-referral tradeup-referral--{{ block.settings.style }}">
    <h3 class="tradeup-referral__heading">{{ block.settings.heading }}</h3>
    <p class="tradeup-referral__description">{{ block.settings.description }}</p>
    <div class="tradeup-referral__login-prompt">
      <a href="{{ routes.account_login_url }}" class="tradeup-referral__login-link">
        Sign in to get your referral code
      </a>
    </div>
  </div>
{% endif %}

<script>
  (function() {
    const referral = document.querySelector('[data-tradeup-referral]');
    if (!referral) return;

    const customerId = referral.dataset.customerId;
    const codeEl = referral.querySelector('[data-referral-code]');
    const copyBtn = referral.querySelector('[data-copy-btn]');
    const copyText = referral.querySelector('[data-copy-text]');
    const statsEl = referral.querySelector('[data-referral-stats]');
    const countEl = referral.querySelector('[data-referral-count]');
    const earningsEl = referral.querySelector('[data-referral-earnings]');

    const shopUrl = window.location.origin;
    let referralCode = '';

    // Fetch referral code and stats
    async function fetchReferralData() {
      try {
        const apiBase = window.TRADEUP_API_URL || '/apps/tradeup/api';
        const response = await fetch(`${apiBase}/customer-account/extension/data`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ customer_id: customerId })
        });

        if (!response.ok) throw new Error('Failed to fetch');

        const data = await response.json();

        if (data.is_member && data.member) {
          // Get referral code from member data or generate
          referralCode = data.referral?.referral_code || data.member.member_number;
          codeEl.textContent = referralCode;

          // Show stats if available
          if (statsEl && data.referral) {
            countEl.textContent = data.referral.referral_count || 0;
            earningsEl.textContent = '$' + (data.referral.referral_earnings || 0).toFixed(2);
            if (data.referral.referral_count > 0) {
              statsEl.hidden = false;
            }
          }
        }

      } catch (error) {
        console.error('TradeUp: Error fetching referral data', error);
      }
    }

    // Copy to clipboard
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const referralUrl = `${shopUrl}/pages/join?ref=${referralCode}`;
        try {
          await navigator.clipboard.writeText(referralUrl);
          copyBtn.classList.add('tradeup-referral__copy-btn--copied');
          copyText.textContent = 'Copied!';
          setTimeout(() => {
            copyBtn.classList.remove('tradeup-referral__copy-btn--copied');
            copyText.textContent = 'Copy';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }

    // Share buttons
    const shareButtons = referral.querySelectorAll('[data-share]');
    shareButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const platform = btn.dataset.share;
        const referralUrl = encodeURIComponent(`${shopUrl}/pages/join?ref=${referralCode}`);
        const text = encodeURIComponent(`Check out this store! Use my code ${referralCode} to get store credit.`);

        const urls = {
          facebook: `https://www.facebook.com/sharer/sharer.php?u=${referralUrl}`,
          twitter: `https://twitter.com/intent/tweet?text=${text}&url=${referralUrl}`,
          whatsapp: `https://api.whatsapp.com/send?text=${text} ${decodeURIComponent(referralUrl)}`,
          email: `mailto:?subject=${encodeURIComponent('Check out this store!')}&body=${text}%20${referralUrl}`
        };

        if (urls[platform]) {
          window.open(urls[platform], '_blank', 'width=600,height=400');
        }
      });
    });

    fetchReferralData();
  })();
</script>
